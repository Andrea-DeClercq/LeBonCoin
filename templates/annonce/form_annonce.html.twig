{% extends 'base.html.twig' %}


{% block title %}Nouvelle annonce{% endblock %}

{% block body %}
{{ form_start(form) }}
<div class="container-fluid">
 <h1> Publication d'une nouvelle annonce</h1>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10" style="margin-top: 25px;">
      <div class="row">
          <div class="col-6">
            <h4> Titre de l'annonce</h4>
            {{form_widget(form.title)}}
